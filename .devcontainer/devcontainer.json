{
  "name": "tuma-task-backend",
  "build": {
    "dockerfile": "../backend/Dockerfile",
    "context": "../backend"
  },
  "forwardPorts": [8000, 5432, 6379],
  "remoteUser": "vscode",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker"
      ],
      "tasks": {
        "setup": "Run Tasks: Dev Env Setup"
      }
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt && prisma generate"
}
