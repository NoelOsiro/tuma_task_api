{
  "name": "tuma-task-backend",
  "build": {
    "dockerfile": "../backend/Dockerfile",
    "context": "../backend"
  },
  "features": {
    "ghcr.io/itsmechlark/features/postgresql:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/redis:1": {}
  },
  "forwardPorts": [8000, 5432, 6379],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker"
      ],
      "tasks": {
        "setup": "Run Tasks: Dev Env Setup"
      }
    }
  },
  "postCreateCommand": "cd backend && python -m pip install --upgrade pip && pip install -r requirements.txt && prisma generate"

}
