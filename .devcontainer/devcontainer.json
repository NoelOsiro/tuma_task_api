{
  "name": "tuma-task-backend",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "forwardPorts": [8000, 5432, 6379],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker"
      ],
      "tasks": {
        "setup": "Run Tasks: Dev Env Setup"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/scripts/devcontainer_setup.sh"

}
